<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/idImgBtn_Back"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:onClick="onClick"
        android:src="@drawable/switch_back"/>

    <ImageButton
        android:id="@+id/idImgBtn_StartBrackets"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:onClick="onClick"
        android:src="@drawable/switch_startbrackets"/>

    <ImageButton
        android:id="@+id/idImgBtn_8"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:onClick="onClick"
        android:src="@drawable/switch_8"/>

    <ImageButton
        android:id="@+id/idImgBtn_5"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:onClick="onClick"
        android:src="@drawable/switch_5"/>

    <ImageButton
        android:id="@+id/idImgBtn_2"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:onClick="onClick"
        android:src="@drawable/switch_2"/>

    <ImageButton
        android:id="@+id/idImgBtn_0"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:onClick="onClick"
        android:src="@drawable/switch_0"/>

</LinearLayout>
